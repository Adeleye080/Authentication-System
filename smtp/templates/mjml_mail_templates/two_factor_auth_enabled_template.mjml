<mjml>
  <mj-head>
    <mj-title>Two-Factor Authentication Enabled</mj-title>
    <mj-font name="Roboto" href="https://fonts.googleapis.com/css?family=Roboto:400,500,700" />
    <mj-attributes>
      <mj-all font-family="Roboto, Arial, sans-serif" />
      <mj-text font-size="16px" color="#000000" line-height="24px" />
      <mj-section background-color="#ffffff" padding="20px 0" />
    </mj-attributes>
    <mj-style>
      .link-nostyle {
        color: inherit;
        text-decoration: none
      }

      .footer-link {
        color: #888888;
        text-decoration: underline
      }
    </mj-style>
  </mj-head>
  <mj-body background-color="#f0f0f0">
    <!-- Header -->
    <mj-section padding="20px 0">
      <mj-column>
        <mj-image src={{companyLogoUrl}} alt="Logo" />
      </mj-column>
    </mj-section>

    <!-- Content -->
    <mj-section>
      <mj-column>
        <mj-text font-size="24px" font-weight="500" padding-bottom="20px">
          Two-Factor Authentication Enabled
        </mj-text>
        <mj-text>
          Hello {{username}},
        </mj-text>
        <mj-text padding-bottom="10px">
          This email confirms that two-factor authentication has been successfully enabled for your account.
        </mj-text>
        <mj-text padding-bottom="10px">
          Your account is now more secure. From now on, you'll need both your password and a verification code to log in.
        </mj-text>
        <mj-text padding-bottom="20px">
          Here's what to remember:
        </mj-text>
        <mj-text font-size="17px" color="#666666" padding-left="20px" padding-bottom="20px">
          <ul>

            <li>Keep your authentication app secure</li>
            <li>Save your backup codes in a safe place</li>
            <li>If you lose access to your verification method, you'll need your backup codes to log in</li>
          </ul>
        </mj-text>
        <mj-button background-color="#4A90E2" color="white" font-weight="500" border-radius="4px" href={{securitySettingsLink}}>
          Manage Security Settings
        </mj-button>
        <mj-text font-size="14px" color="#666666" padding-top="20px">
          If you did not make this change, please contact our support team immediately.
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section padding-top="20px" border-top="1px solid #eeeeee">
      <mj-column>
        <mj-text font-size="12px" color="#888888" align="center">
          &copy; {{currentYear}} {{companyName}}. All rights reserved.
        </mj-text>
        <mj-text font-size="12px" color="#888888" align="center" padding-top="10px">
          <a href={{termsUrl}} class="footer-link">Terms of Service</a> |
          <a href={{privacyUrl}} class="footer-link">Privacy Policy</a>
        </mj-text>
        <mj-text font-size="12px" color="#888888" align="center" padding-top="10px">
          {{companyAddress}}
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>